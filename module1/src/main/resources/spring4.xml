<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="student" class="org.spring.training.spring4.Student">
        <property name="name" value="Krish"/>
        <property name="id" value="12345"/>
        <property name="hostel">
            <bean id="hostel" class="org.spring.training.spring4.Hostel">
                <property name="city" value="Mumbai"/>
                <property name="hostelName" value="DY"/>
            </bean>
        </property>
    </bean>

    <alias name="student" alias="new_student"/>

</beans>